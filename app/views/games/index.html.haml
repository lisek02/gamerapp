.rectangle
  .rectangle-header
    %h1= "List of all games"
  .rectangle-body
    %table.table.table-condensed
      %tbody
        - @games.each do |game|
          %tr
            %td= game.title
            %td= game.rate
            %td= link_to 'Show', game
            - if (current_user)
              %td= link_to 'Add', '#'
            - if (current_user && current_user.admin?)
              %td= link_to 'Edit', edit_game_path(game)
              %td= link_to 'Destroy', game, method: :delete, data: { confrim: 'Are you sure?' }

    - if (current_user && current_user.admin?)
      =link_to 'New Game', new_game_path